<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Bank</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
              <li class="breadcrumb-item active">Edit</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Edit Bank : <%= bank.bankName %></h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="POST">
                <div class="card-body">
                  <div class="form-group">
                    <label for="name">Bank Account Name</label>
                    <input type="text" name="accountName" value="<%= bank.accountName%>" class="form-control" id="accountName" placeholder="Input Bank Account Name" required="">
                  </div>
                  <div class="form-group">
                    <label>Bank Name</label>
                    <select class="form-control select2" style="width: 100%;" name="bankName" required>
                      <option selected="selected">Select Bank</option>
                      <option value="BCA" <% if(bank.bankName === "BCA") { %>
                        selected <% } %> >BCA</option>
                      <option value="BNI" <% if(bank.bankName === "BNI") { %>
                        selected <% } %> >BNI</option>
                      <option value="BRI" <% if(bank.bankName === "BRI") { %>
                        selected <% } %> >BRI</option>
                      <option value="Mandiri" <% if(bank.bankName === "Mandiri") { %>
                        selected <% } %> >Mandiri</option>
                      <option value="Jago" <% if(bank.bankName === "Jago") { %>
                        selected <% } %> >Jago</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="name">Bank Account Number</label>
                    <input type="number" name="accountNumber" value="<%= bank.accountNumber%>" class="form-control" id="accountNumber" placeholder="Input Bank Account Number" required="">
                  </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Save</button>
                </div>
              </form>
            </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>